<h1>Available Listings</h1>

<% if flash[:listing_success] %>
    <div class="alert alert-danger" role="alert">
        <%= flash[:listing_success] %>  
    </div>
<% end %>  <br><br><br>

<%# The larger grid holding all the listings %>
<div class="listings-container">

  <% @listings.each do |listing| %>
    <%# Each listings-option div contains the information for one listing %>
    <% if listing.end_date >= Date.today.to_s %>
      <div class="listings-option">
        <img src="/listings_placeholder.png" alt="listing header image">
        <h3><%= listing.name %></h3>
        <p><%= listing.description %></p>
        <p>Â£<%= listing.price %> per night</p>
        <p>Availability: <%= listing.formatted_start_date %> - <%= listing.formatted_end_date %></p>
          <a href="/listings/<%= listing.id %>">
              <input type="submit" value="Book Here" />
          </a>
      </div>
    <% end %>
  <% end %>
  
</div>