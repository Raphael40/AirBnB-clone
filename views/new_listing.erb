<h1>Add a new listing</h1>

<% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
        <%= flash[:error] %>  
    </div>
<% end %>  

<form method="POST" action="/listings/new">
    <label for="name">Name:</label>
    <input type="text" name="name" />

    <label for="price">Price:</label>
    <input type="number" name="price" />

    <label for="description">Description:</label>
    <input type="text" name="description" />

    <label for="start_date">Available From:</label>
    <input type="date" name="start_date" min="<%= Date.today%>"/>

    <label for="end_date">Available To:</label>
    <input type="date" name="end_date" min="<%= Date.today%>" />

    <input type="submit" value="Submit" />

</form>
