<!DOCTYPE html>
<html>
    <head>
        <title>MakersBnB</title>
        <link rel="stylesheet" href="/style.css" >
    </head>
    <body>
        <h1> <%= @listing.name %> </h1>
        <% if flash[:error] %>
          <div class="alert alert-danger" role="alert">
            <%= flash[:error] %>  
          </div>
        <% end %>        
        <form method="POST" action="/listings/<%= @listing.id %>/booking">
          <input type="date" name="date" min="<%= @listing.start_date %>" max="<%= @listing.end_date %>">
          <input type="submit", value="request to book">
        </form>  
    </body> 
</html>
